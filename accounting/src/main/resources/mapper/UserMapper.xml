<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.family.accounting.mapper.UserMapper">
    
    <!-- 结果映射 -->
    <resultMap id="UserResultMap" type="com.family.accounting.entity.User">
        <id property="id" column="id"/>
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="avatar" column="avatar"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, phone, password, nickname, avatar, created_at, updated_at
    </sql>
    
    <!-- 根据ID查询用户 -->
    <select id="findById" resultMap="UserResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_user
        WHERE id = #{id}
    </select>
    
    <!-- 根据手机号查询用户 -->
    <select id="findByPhone" resultMap="UserResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_user
        WHERE phone = #{phone}
    </select>
    
    <!-- 插入新用户 -->
    <insert id="insert" parameterType="com.family.accounting.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_user (phone, password, nickname, avatar)
        VALUES (#{phone}, #{password}, #{nickname}, #{avatar})
    </insert>
    
    <!-- 更新用户信息 -->
    <update id="update" parameterType="com.family.accounting.entity.User">
        UPDATE t_user
        <set>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 更新用户密码 -->
    <update id="updatePassword">
        UPDATE t_user
        SET password = #{password}
        WHERE id = #{id}
    </update>
    
    <!-- 检查手机号是否存在 -->
    <select id="existsByPhone" resultType="int">
        SELECT COUNT(1)
        FROM t_user
        WHERE phone = #{phone}
    </select>
    
</mapper>
